{% extends 'layouts/base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">


            <h1 class="mt-5 mb-3 text-center">Reset your password</h1>

            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="alert alert-error mb-3 rounded" role="alert">{{ flash_error }}</div>
            {% endfor %}

            <p class="mb-5 text-muted text-center">
                    
                Enter your email address and we will send you a link to reset your password.
            </p>

            {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-lg btn-primary">Send password reset email</button>
                </div>
            {{ form_end(requestForm) }}
        </div>
    </div>
    
{% endblock %}
