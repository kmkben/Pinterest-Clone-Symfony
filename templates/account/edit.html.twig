{% extends 'layouts/base.html.twig' %}

{% block title 'Edit User Account' %}

{% block body %}

<div class="row">
    <div class="col-md-6 mx-auto ">
        <h1 class="my-5 text-center">Update Profile</h1>

        {{ form_start(form) }}

            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.firstName) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.lastName) }}
                </div>
            </div>

            {{ form_row(form.email) }}

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-lg btn-primary" formnovalidate>
                    Apply changes
                </button>
            </div>
        {{ form_end(form) }}

    </div>
</div>
{% endblock %}
